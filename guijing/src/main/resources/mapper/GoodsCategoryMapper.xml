<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiannvzuo.guijing.dao.GoodsCategoryMapper">
    <resultMap id="GoodsCategoryResult" type="com.xiannvzuo.guijing.entity.GoodsCategory">
        <result property="categoryId" column="category_id"/>
        <result property="categoryLevel" column="category_level"/>
        <result property="parentId" column="parent_id"/>
        <result property="categoryName" column="category_name"/>
        <result property="categoryRank" column="category_rank"/>
        <result property="isDelete" column="is_deleted"/>
        <result property="createTime" column="create_time"/>
        <result property="createUser" column="create_user"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateUser" column="update_user"/>
    </resultMap>

    <sql id="BaseColumnList">
        category_id, category_level, parent_id, category_name, category_rank,
        is_deleted, create_time, create_user, update_time, update_user
    </sql>

    <insert id="insertSelective" parameterType="com.xiannvzuo.guijing.entity.GoodsCategory">
        insert into tb_guijing_goods_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="categoryId != null">
                category_id,
            </if>
            <if test="categoryLevel != null">
                category_level,
            </if>
            <if test="parentId != null">
                parent_id,
            </if>
            <if test="categoryName != null">
                category_name,
            </if>
            <if test="categoryRank != null">
                category_rank,
            </if>
            <if test="isDelete != null">
                is_deleted,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="createUser != null">
                create_user,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
            <if test="updateUser != null">
                update_user
            </if>
        </trim>
        <trim prefix="value (" suffix=")" suffixOverrides=",">
            <if test="categoryId != null">
                #{categoryId},
            </if>
            <if test="categoryLevel != null">
                #{categoryLevel},
            </if>
            <if test="parentId != null">
                #{parentId} ,
            </if>
            <if test="categoryName != null">
                #{categoryName},
            </if>
            <if test="categoryRank != null">
                #{categoryRank},
            </if>
            <if test="isDelete != null">
                #{isDelete},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="createUser != null">
                #{createUser},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
            <if test="updateUser != null">
                #{updateUser}
            </if>
        </trim>
    </insert>


    <update id="update" parameterType="com.xiannvzuo.guijing.entity.GoodsCategory">
        update tb_guijing_goods_category
        <set>
            <if test="categoryLevel != null">
                category_level=#{categoryLevel},
            </if>
            <if test="parentId != null">
                parent_id=#{parentId} ,
            </if>
            <if test="categoryName != null">
                category_name=#{categoryName},
            </if>
            <if test="categoryRank != null">
                category_rank=#{categoryRank},
            </if>
            <if test="isDelete != null">
                is_deleted=#{isDelete},
            </if>
            <if test="createTime != null">
                create_time=#{createTime},
            </if>
            <if test="createUser != null">
                create_user=#{createUser},
            </if>
            <if test="updateTime != null">
                update_time=#{updateTime},
            </if>
            <if test="updateUser != null">
                update_user=#{updateUser}
            </if>
        </set>
        where category_id=#{categoryId}
    </update>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="GoodsCategoryResult">
        select
        <include refid="BaseColumnList"/>
        from tb_guijing_goods_category
        where category_id = #{categoryId} and is_deleted=0
    </select>

    <select id="selectByLevelAndName" resultMap="GoodsCategoryResult">
        select
        <include refid="BaseColumnList"/>
        from tb_guijing_goods_category
        where category_level=#{categoryLevel} and  category_name=#{categoryName}
    </select>

    <select id="findGoodsCategoryList" parameterType="Map" resultMap="GoodsCategoryResult">
        select
        <include refid="BaseColumnList"/>
        from tb_guijing_goods_category
        <where>
            <if test="categoryLevel != null and categoryLevel != ''">
                and category_level = #{categoryLevel}
            </if>
            <if test="parentId != null and parentId != ''">
                and parent_id = #{parentId}
            </if>
            and is_deleted=0
        </where>
        order by category_rank desc
        <if test="start!=null and limit!=null">
            limit #{start}, #{limit}
        </if>
    </select>

    <select id="getTotalGoodsCategories" parameterType="Map" resultType="int">
        select count(*) from tb_guijing_goods_category
        <where>
            <if test="categoryLevel != null and categoryLevel != ''">
                and category_level = #{categoryLevel}
            </if>
            <if test="parentId != null and parentId != ''">
                and parent_id = #{parentId}
            </if>
            and is_deleted=0
        </where>
    </select>


    <update id="deleteBatch">
        update tb_guijing_goods_category
        set is_deleted=1
        where category_id in 
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </update>

    <select id="selectByLevelAndParentIdsAndNumber" resultType="com.xiannvzuo.guijing.entity.GoodsCategory" resultMap="GoodsCategoryResult">
        select
        <include refid="BaseColumnList"/>
        from tb_guijing_goods_category
        where parent_id in
        <foreach collection="parentIds" open="(" close=")" item="parentId" separator=",">
            #{parentId}
        </foreach>
        and category_level = #{categoryLevel}
        and is_deleted=0
        order by category_rank desc
        <if test="number>0">
            limit #{number}
        </if>
        <!--select
        <include refid="BaseColumnList"/>
        from tb_guijing_goods_category
        where parent_id = 0-->
    </select>






</mapper>