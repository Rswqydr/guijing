<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiannvzuo.guijing.dao.GuijingShoppingCartMapper">
    <resultMap id="GuijingShoppingCartResult" type="com.xiannvzuo.guijing.entity.GuijingShoppingCart">
        <result property="cartItemId" column="cart_item_id"/>
        <result property="userId" column="user_id"/>
        <result property="goodsId" column="goods_id"/>
        <result property="goodsCount" column="goods_count"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="BaseColumnList">
        cart_item_id, user_id, goods_id, goods_count, is_deleted, create_time, update_time
    </sql>

    <insert id="insertSelective" parameterType="com.xiannvzuo.guijing.entity.GuijingShoppingCart">
        insert into tb_guijing_shopping_cart_item
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="cartItemId != null">
                cart_item_id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="goodsId != null">
                goods_id,
            </if>
            <if test="goodsCount != null">
                goods_count,
            </if>
            <if test="isDeleted != null">
                is_deleted,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateTime != null">
                update_time
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="cartItemId != null">
                #{cartItemId},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="goodsId != null">
                #{goodsId},
            </if>
            <if test="goodsCount != null">
                #{goodsCount},
            </if>
            <if test="isDeleted != null">
                #{isDeleted},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateTime != null">
                #{updateTime}
            </if>
        </trim>
    </insert>

    <update id="deleteByPrimaryKey" parameterType="java.lang.Long">
        update tb_guijing_shopping_cart_item
        set is_deleted = 1
        where cart_item_id = #{cartItemId}
    </update>

    <update id="updateByPrimaryKeySelective" parameterType="com.xiannvzuo.guijing.entity.GuijingShoppingCart">
        update tb_guijing_shopping_cart_item
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test="goodsCount != null">
                goods_count = #{goodsCount},
            </if>
            <if test="isDeleted != null">
                is_deleted  = #{isDeleted},
            </if>
            <if test="createTime != null">
                create_time =  #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime}
            </if>
        </set>
        where cart_item_id = #{cartItemId}
    </update>


    <select id="selectCountByUserId" resultType="int">
        select count(*)
        from tb_guijing_shopping_cart_item
        where cart_item_id = #{userId}
    </select>

    <select id="selectByprimaryKey" resultType="com.xiannvzuo.guijing.entity.GuijingShoppingCart">
        select
        <include refid="BaseColumnList"/>
        from tb_guijing_shopping_cart_item
        where cart_item_id = #{cartItemId}
    </select>

    <select id="selectByUserIdAndGoodsId" resultType="com.xiannvzuo.guijing.entity.GuijingShoppingCart">
        select
        <include refid="BaseColumnList"/>
        from tb_guijing_shopping_cart_item
        where cart_item_id = #{userId} and   goods_id = #{goodsId}
    </select>

    <select id="selectByUserId" resultMap="GuijingShoppingCartResult">
        select
        <include refid="BaseColumnList"/>
        from tb_guijing_shopping_cart_item
        where cart_item_id = #{userId}

    </select>

    <select id="selectByUserIdAndCartIds" resultMap="GuijingShoppingCartResult">
        select
        <include refid="BaseColumnList"/>
        from tb_guijing_shopping_cart_item
        where  user_id = #{userId} and cart_item_id in
        <foreach collection="cartIds" item="id" open="(" close=")">
            #{id}
        </foreach>
    </select>

    <update id="batchDeleteByIds" >
        update tb_guijing_shopping_cart_item
        set is_deleted = 1
        where cart_item_id in
        <foreach collection="array" item="id" open="(" close=")">
            #{id}
        </foreach>
    </update>


</mapper>