<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiannvzuo.guijing.dao.AdminUserMapper">
    <resultMap id="adminUserResult" type="com.xiannvzuo.guijing.entity.AdminUser">
        <result property="id" column="admin_user_id"/>
        <result property="adminName" column="login_user_name"/>
        <result property="adminPassword" column="login_user_password"/>
        <result property="niceName" column="ck_name"/>
        <result property="locked" column="locked"/>
    </resultMap>

    <sql id="Base_Column_List">
        admin_user_id, login_user_name, login_user_password,ck_name, locked
    </sql>

    <insert id="insertAdminUser" parameterType="com.xiannvzuo.guijing.entity.AdminUser">
        insert into tb_guijing_admin_user
        <include refid="Base_Column_List"/>
        values(#{id}, #{adminName}, #{adminPassword}, #{niceName}, #{locked})
    </insert>

    <insert id="insertUser" >
        insert into tb_guijing_admin_user(login_user_name, login_user_password, ck_name) value (#{userName}, #{password}, 0)
    </insert>

    <select id="login" resultMap="adminUserResult">
        select
        <include refid="Base_Column_List"/>
        from tb_guijing_admin_user
        where login_user_name=#{userName} and login_user_password=#{password} and locked=0
    </select>

    <select id="selectByAdminUserId" parameterType="int" resultMap="adminUserResult">
        select
        <include refid="Base_Column_List"/>
        from tb_guijing_admin_user
        where admin_user_id=#{id}
    </select>

    <update id="updatePassword" parameterType="com.xiannvzuo.guijing.entity.AdminUser" >
        update tb_guijing_admin_user
        <set>
            <if test="adminName != null">
                login_user_name = #{adminName}
            </if>
            <if test="adminPassword != null">
                login_user_password = #{adminPassword}
            </if>
        </set>
        where tb_guijing_admin_user.admin_user_id = #{id}
    </update>

    <update id="updateNiceName" parameterType="com.xiannvzuo.guijing.entity.AdminUser" >
        update tb_guijing_admin_user
        <set>
            <if test="adminName != null">
                login_user_name = #{adminName}
            </if>
            <if test="niceName != null">
                ck_name = #{niceName}
            </if>
        </set>
        where tb_guijing_admin_user.admin_user_id = #{id}
    </update>
</mapper>